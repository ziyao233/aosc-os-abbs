PKGNAME=linux-kernel-${__VER}
PKGSEC=kernel
PKGDEP=""
BUILDDEP="bc git pahole parallel kernel-build-common"
BUILDDEP__AMD64="$BUILDDEP llvm"
BUILDDEP__ARM64="$BUILDDEP llvm"
PKGDES="Generic Linux Kernel v${__VER} for AOSC OS (Mainline)"

ABSTRIP=0
ABELFDEP=0
FAIL_ARCH="!(amd64|arm64|loongarch64|ppc64el|riscv64)"
PKGEPOCH=1

PKGBREAK="
	zfs<=2.2.0
	nvidia<=530.41.03
	virtualbox<=7.0.8
"

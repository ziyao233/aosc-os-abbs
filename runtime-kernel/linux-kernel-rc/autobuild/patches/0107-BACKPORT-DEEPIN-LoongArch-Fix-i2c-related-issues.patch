 static const struct of_device_id loongson_gpio_of_match[] = {
@@ -291,6 +382,18 @@ static const struct of_device_id loongson_gpio_of_match[] = {
 		.compatible = "loongson,ls7a-gpio",
 		.data = &loongson_gpio_ls7a_data,
